{
  "meta": {
    "app": "Tutor",
    "version": "0.1.0",
    "wakeWord": "COMPUTER",
    "commandStyle": "COMPUTER: Title Case"
  },
  "homePageId": "home",
  "pages": {
    "home": {
      "type": "menu",
      "title": "Good morning, David.",
      "subtitle": "To get started, say: COMPUTER: Good Morning",
      "tiles": [
        {
          "label": "POWER UP",
          "action": {
            "type": "routine",
            "name": "good_morning"
          }
        },
        {
          "label": "Watch TV",
          "to": "watch_root"
        },
        {
          "label": "See My Schedule",
          "to": "schedule_today"
        },
        {
          "label": "Get Info",
          "to": "info_root"
        }
      ]
    },
    "watch_root": {
      "type": "menu",
      "title": "What do you want to watch?",
      "tiles": [
        {
          "label": "Frasier",
          "to": "playback_options",
          "set": {
            "showTitle": "Frasier",
            "provider": "prime"
          }
        },
        {
          "label": "Reacher",
          "to": "playback_options",
          "set": {
            "showTitle": "Reacher",
            "provider": "prime"
          }
        },
        {
          "label": "Terminal List",
          "to": "playback_options",
          "set": {
            "showTitle": "The Terminal List",
            "provider": "prime"
          }
        },
        {
          "label": "Something Else",
          "to": "watch_something_else"
        }
      ]
    },
    "watch_something_else": {
      "type": "menu",
      "title": "What do you want to do?",
      "tiles": [
        {
          "label": "Let COMPUTER Pick",
          "to": "say_suggest_show"
        },
        {
          "label": "Show Me Other Shows",
          "to": "say_browse_prime"
        },
        {
          "label": "Go Back",
          "to": "watch_root"
        }
      ]
    },
    "playback_options": {
      "type": "menu",
      "title": "What do you want to do?",
      "requireState": [
        "showTitle",
        "provider"
      ],
      "tiles": [
        {
          "label": "Start Where I Left Off",
          "to": "say_resume"
        },
        {
          "label": "Watch the Next Episode",
          "to": "say_next_episode"
        },
        {
          "label": "Skip to the Next Season",
          "to": "say_next_season"
        },
        {
          "label": "Start From the Beginning",
          "to": "say_restart"
        }
      ]
    },
    "say_resume": {
      "type": "say",
      "title": "Say this:",
      "displayText": "COMPUTER: Play {{showTitle}}",
      "spokenText": "play {{showTitle}}",
      "tts": {
        "enabled": true,
        "stripWakeWord": true
      },
      "autoReturnTo": "home",
      "autoReturnSeconds": 15
    },
    "say_next_episode": {
      "type": "say",
      "title": "Say this:",
      "displayText": "COMPUTER: Play The Next Episode Of {{showTitle}}",
      "spokenText": "play the next episode of {{showTitle}}",
      "tts": {
        "enabled": true,
        "stripWakeWord": true
      },
      "autoReturnTo": "home",
      "autoReturnSeconds": 15
    },
    "say_next_season": {
      "type": "say",
      "title": "Say this:",
      "displayText": "COMPUTER: Skip To The Next Season Of {{showTitle}}",
      "spokenText": "skip to the next season of {{showTitle}}",
      "tts": {
        "enabled": true,
        "stripWakeWord": true
      },
      "autoReturnTo": "home",
      "autoReturnSeconds": 15
    },
    "say_restart": {
      "type": "say",
      "title": "Say this:",
      "displayText": "COMPUTER: Start {{showTitle}} From The Beginning",
      "spokenText": "start {{showTitle}} from the beginning",
      "tts": {
        "enabled": true,
        "stripWakeWord": true
      },
      "autoReturnTo": "home",
      "autoReturnSeconds": 15
    },
    "say_suggest_show": {
      "type": "say",
      "title": "Say this:",
      "displayText": "COMPUTER: Suggest A TV Show",

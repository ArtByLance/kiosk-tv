      "tts": {
        "enabled": true,
        "stripWakeWord": true
      },
      "autoReturnTo": "home",
      "autoReturnSeconds": 15
    },
    "say_browse_prime": {
      "type": "say",
      "title": "Say this:",
      "displayText": "COMPUTER: Show Me TV Shows On Prime Video",
      "spokenText": "show me TV shows on Prime Video",
      "tts": {
        "enabled": true,
        "stripWakeWord": true
      },
      "autoReturnTo": "home",
      "autoReturnSeconds": 15
    },
